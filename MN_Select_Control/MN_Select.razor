    </div>
    <label id="mn_labeSelectl-@this.GetHashCode()" for="mn_selectSelectedValueContainer-@this.GetHashCode()">@Label</label>
    <div class="mn_listSelect">
        <ul>
            @foreach(var item in _itemsList)
            {
                <li @onclick="(() => {setNewValue(item);})">
                    @ContentList(item)
                </li>
            }
        </ul>
    </div>
</div>