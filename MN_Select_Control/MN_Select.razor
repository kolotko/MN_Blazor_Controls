@typeparam TItem
@inject IJSRuntime jsRuntime

<div id="mn_selectContainer-@this.GetHashCode()" class="mn_selectContainer" data-avaliable="@_selectContainerDataAvaliable">
    <div id="mn_selectWrapper-@this.GetHashCode()" class="mn_selectWrapper">   
